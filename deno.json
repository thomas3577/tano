{
  "tasks": {
    "run": "cd ./examples && deno run --unstable --allow-read --allow-run --allow-env --allow-write ../tano.ts --file ./tanofile.ts",
    "cache": "deno cache --lock=deno.lock --lock-write ./src/deps.ts",
    "test": "deno test --unstable --allow-read --allow-run --allow-env --allow-write --trace-ops"
  },
  "compilerOptions": {
    "strict": true
  },
  "imports": {
    "std/": "https://deno.land/std@0.197.0/"
  },
  "lint": {
    "rules": {
      "tags": [
        "recommended"
      ],
      "include": [
        "ban-untagged-todo"
      ],
      "exclude": [
        "no-explicit-any",
        "no-inferrable-types"
      ]
    }
  },
  "fmt": {
    "useTabs": false,
    "lineWidth": 360,
    "indentWidth": 2,
    "singleQuote": true,
    "proseWrap": "preserve",
    "exclude": [
      ".vscode/**",
      ".tano/cache.json",
      "examples/.tano/cache.json",
      "cspell.json"
    ]
  }
}
