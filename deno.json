{
  "tasks": {
    "install": "deno install -A -f --config ./deno.json ./tano.ts",
    "run": "cd ./examples && deno run --allow-read --allow-run --allow-env ../tano.ts --file ./tanofile.ts",
    "check": "deno fmt --check && deno lint"
  },
  "compilerOptions": {
    "strict": true
  },
  "imports": {
    "std/": "https://deno.land/std@0.178.0/"
  },
  "lint": {
    "rules": {
      "tags": [
        "recommended"
      ],
      "include": [
        "ban-untagged-todo"
      ],
      "exclude": [
        "no-explicit-any",
        "no-inferrable-types"
      ]
    }
  },
  "fmt": {
    "files": {
      "exclude": [
        ".vscode/",
        "cspell.json"
      ]
    },
    "options": {
      "useTabs": false,
      "lineWidth": 240,
      "indentWidth": 2,
      "singleQuote": true,
      "proseWrap": "preserve"
    }
  }
}
