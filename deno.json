{
  "name": "@toea/tano",
  "version": "0.3.9",
  "exports": "./mod.ts",
  "tasks": {
    "cache": "deno cache --lock=deno.lock --lock-write ./mod.ts",
    "test": "deno test --unstable-kv --allow-read --allow-run --allow-env --allow-write",
    "run": "cd ./examples && deno run --unstable-kv --allow-read --allow-run --allow-env --allow-write ../tano.ts --file ./tanofile.ts"
  },
  "compilerOptions": {
    "strict": true
  },
  "imports": {
    "@std/path": "jsr:@std/path@0.219",
    "@std/fs": "jsr:@std/fs@0.219",
    "@std/fmt": "jsr:@std/fmt@0.219",
    "@std/assert": "jsr:@std/assert@0.219",
    "@std/testing": "jsr:@std/testing@0.219",
    "@std/datetime": "jsr:@std/datetime@0.219",
    "@std/log": "jsr:@std/log@0.219",
    "@std/cli": "jsr:@std/cli@0.219"
  },
  "publish": {
    "exclude": [
      ".github",
      "examples",
      ".gitignore",
      ".editorconfig",
      "cspell.json",
      "*.code-workspace",
      "**/*.test.ts",
      "tanofile.ts"
    ]
  },
  "lint": {
    "rules": {
      "tags": [
        "recommended"
      ],
      "include": [
        "ban-untagged-todo",
        "no-deprecated-deno-api"
      ],
      "exclude": [
        "no-explicit-any",
        "no-inferrable-types"
      ]
    }
  },
  "fmt": {
    "useTabs": false,
    "lineWidth": 360,
    "indentWidth": 2,
    "singleQuote": true,
    "proseWrap": "preserve",
    "exclude": [
      ".vscode/**",
      ".tano/**",
      "coverage/**",
      "cspell.json"
    ]
  }
}
