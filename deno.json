{
  "name": "@dx/tano",
  "version": "0.4.30",
  "exports": {
    ".": "./mod.ts"
  },
  "tasks": {
    "lock": "deno cache --lock=deno.lock ./mod.ts ./src/**/*.ts",
    "test": "deno test --unstable-kv --allow-read --allow-run --allow-env --allow-write",
    "run": "cd ./examples && deno run --unstable-kv --allow-read --allow-run --allow-env --allow-write ../tano.ts --no-cache=true --file ./tanofile.ts",
    "check": "deno task lock && deno fmt --check && deno lint && deno task test && deno task run && deno publish --dry-run"
  },
  "imports": {
    "@std/path": "jsr:@std/path@1",
    "@std/fs": "jsr:@std/fs@0.229",
    "@std/fmt": "jsr:@std/fmt@0.225",
    "@std/assert": "jsr:@std/assert@1",
    "@std/testing": "jsr:@std/testing@0.225",
    "@std/datetime": "jsr:@std/datetime@0.224",
    "@std/log": "jsr:@std/log@0.224",
    "@std/cli": "jsr:@std/cli@0.224"
  },
  "publish": {
    "exclude": [
      ".github",
      ".vscode",
      "docs",
      "examples",
      ".gitignore",
      ".editorconfig",
      "cspell.json",
      "deno.lock",
      "*.code-workspace",
      "**/*.test.ts",
      "tanofile.ts"
    ]
  },
  "fmt": {
    "useTabs": false,
    "lineWidth": 360,
    "indentWidth": 2,
    "singleQuote": true,
    "proseWrap": "preserve",
    "exclude": [
      ".vscode/**",
      ".tano/**",
      "cspell.json"
    ]
  }
}
