{
  "tasks": {
    "run": "deno run --allow-read --allow-run ./src/tano.ts --file ./examples/tanofile.ts",
    "check": "deno fmt --check && deno lint",
    "lock": "deno cache --lock-write ./example/tanofile.ts",
    "test": "deno test --allow-read --allow-run"
  },
  "compilerOptions": {
    "strict": true
  },
  "imports": {
    "std/": "https://deno.land/std@0.177.0/"
  },
  "lint": {
    "rules": {
      "tags": [
        "recommended"
      ],
      "include": [
        "ban-untagged-todo"
      ],
      "exclude": [
        "no-explicit-any",
        "no-inferrable-types"
      ]
    }
  },
  "fmt": {
    "files": {
      "exclude": [".vscode/"]
    },
    "options": {
      "useTabs": false,
      "lineWidth": 240,
      "indentWidth": 2,
      "singleQuote": true,
      "proseWrap": "preserve"
    }
  }
}
