{
  "tasks": {
    "run": "cd ./examples && deno run --allow-read --allow-run --allow-env --allow-write ../tano.ts --file ./tanofile.ts"
  },
  "compilerOptions": {
    "strict": true
  },
  "imports": {
    "std/": "https://deno.land/std@0.183.0/"
  },
  "lint": {
    "rules": {
      "tags": [
        "recommended"
      ],
      "include": [
        "ban-untagged-todo"
      ],
      "exclude": [
        "no-explicit-any",
        "no-inferrable-types"
      ]
    }
  },
  "fmt": {
    "files": {
      "exclude": [
        ".vscode/**",
        ".tano/cache.json",
        "examples/.tano/cache.json",
        "cspell.json"
      ]
    },
    "options": {
      "useTabs": false,
      "lineWidth": 240,
      "indentWidth": 2,
      "singleQuote": true,
      "proseWrap": "preserve"
    }
  }
}
