{
  "tasks": {
    "go": "./bin/tano.exe",
    "start": "deno run -A ./src/tano.ts",
    "check": "deno fmt --check && deno lint",
    "lock": "deno cache --lock-write ./tanofile.ts",
    "compile": "deno compile --unstable -A --output=bin/tano src/tano.ts"
  },
  "compilerOptions": {
    "strict": true,
    "emitDecoratorMetadata": true
  },
  "imports": {
    "std/": "https://deno.land/std@0.177.0/"
  },
  "lint": {
    "rules": {
      "tags": [
        "recommended"
      ],
      "include": [
        "ban-untagged-todo"
      ],
      "exclude": [
        "no-explicit-any",
        "no-inferrable-types"
      ]
    }
  },
  "fmt": {
    "options": {
      "useTabs": false,
      "lineWidth": 240,
      "indentWidth": 2,
      "singleQuote": true,
      "proseWrap": "preserve"
    }
  }
}
